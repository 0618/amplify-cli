Resources:
  <%if (props.authSelections.includes('Cognito User Pools') && props.mfaConfiguration != 'OFF') { %>
  IAMRole: 
    Type: AWS::IAM::Role
    Properties:
      RoleName: <%=props.roleName %>
      AssumeRolePolicyDocument: 
        Version: "2012-10-17"
        Statement: 
          - Sid: ""
            Effect: "Allow"
            Principal: 
              Service: "cognito-idp.amazonaws.com"
            Action: 
              - "sts:AssumeRole"
            Condition: 
              StringEquals:
                sts:ExternalId: <%= props.roleExternalId %>
      Policies: 
        - 
          PolicyName: <%= props.policyName %>
          PolicyDocument: 
            Version: "2012-10-17"
            Statement: 
              - 
                Effect: "Allow"
                Action: 
                  - "sns:Publish"
                Resource: "*"

  <% } %>
  <%if (props.authSelections.includes('Cognito User Pools')) { %>
  UserPool:
    Type: AWS::Cognito::UserPool
    Properties:
      UserPoolName: <%= props.userPoolName %>
      Schema: 
        <% for(var i=0; i < props.requiredAttributes.length; i++) { %>
        -
          Name: <%= props.requiredAttributes[i] %>
          Required: true
        <% } %>
      Policies:
        PasswordPolicy:
          MinimumLength: <%= props.passwordPolicy.minLength %>
          RequireLowercase: <%= props.passwordPolicy.requiresLower %>
          RequireNumbers: <%=  props.passwordPolicy.requiresNumbers %>
          RequireSymbols: <%= props.passwordPolicy.requiresSymbols %>
          RequireUppercase: <%= props.passwordPolicy.requiresUpper %>
      MfaConfiguration: '<%= props.mfaConfiguration %>'
      <%if (props.mfaConfiguration != 'OFF') { %>
      SmsAuthenticationMessage: <%= props.smsAuthenticationMessage %>
      SmsVerificationMessage: <%= props.smsVerificationMessage %>
      SmsConfiguration: 
        SnsCallerArn: !GetAtt IAMRole.Arn
        ExternalId: <%= props.roleExternalId %>  
      <% } %>
    <%if (props.mfaConfiguration != 'OFF') { %>
    DependsOn: IAMRole
    <% } %>

  <% } %>



  <%if (props.authSelections.includes('Cognito Identity Pools')) { %>
  IdentityPool:
    Type: AWS::Cognito::IdentityPool
    Properties: 
      IdentityPoolName: <%= props.identityPoolName %>
      AllowUnauthenticatedIdentities: <%= props.allowUnauthenticatedIdentities %>
  <% } %> 
  
Outputs :
  UserPoolName:
    Value: !Ref 'UserPool'
    Description:  name for the user pool
  IdentityPoolName:
    Value: !Ref 'IdentityPool'
    Description:  name for the identity pool
  <%if (props.mfaConfiguration != 'OFF') { %>
  CreatedIAMRole: 
    Value: !GetAtt IAMRole.Arn
    Description: role arn
  <% } %>